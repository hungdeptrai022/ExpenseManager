<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableRow
        android:id="@+id/table_row_heading"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_column="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textStyle="bold"
            android:textSize="22sp"
            android:paddingRight="5dp"
            android:layout_column="2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textStyle="bold"
            android:textSize="22sp"
            android:paddingRight="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textStyle="bold"
            android:textSize="22sp"
            android:paddingRight="5dp"/>
    </TableRow>
    <TableRow
        android:layout_marginTop="10dp"
        android:id="@+id/table_row_info1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="LeHungBeu"
            android:layout_column="1"
            android:paddingLeft="5dp"
            android:paddingEnd="10dp"/>
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="hung@gmail.com"
            android:paddingEnd="10dp"
            android:layout_column="2"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="123456789"
            android:paddingEnd="10dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Hanoi"
            android:paddingEnd="10dp"/>
    </TableRow>
    <TableRow
        android:layout_marginTop="10dp"
        android:id="@+id/table_row_info2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Le Ngoc Hung"
            android:layout_column="1"
            android:paddingLeft="5dp"
            android:paddingEnd="10dp"/>
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="hung1142004@gmail.com"
            android:paddingEnd="10dp"
            android:layout_column="2"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="123456788"
            android:paddingEnd="10dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Vinh Phuc"
            android:paddingEnd="10dp"/>
    </TableRow>
</TableLayout>